<TopBar>:
    id:top_bar
    left_action_items: [['assets/images/logo-32x32.png',lambda x: x]]
    right_action_items: [['cart',lambda x:x,'cart'],['heart',lambda x:x,'wishlist']]
    title: "[font=assets/fonts/DancingScript/static/DancingScript-Bold.ttf][size=27sp]Byte Boulevard[/size][/font]"
    md_bg_color: 'white'
    specific_text_color: "purple"
